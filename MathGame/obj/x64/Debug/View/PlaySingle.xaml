<Page
    x:Class="MathGame.View.PlaySingle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MathGame.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="#37384d">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="8 4 8 4">
                <TextBlock x:ConnectionId='6' x:Name="txtScore" Text="Score: 0" FontSize="30" Foreground="White" FontWeight="ExtraBold" HorizontalAlignment="Left"/>
                <TextBlock x:ConnectionId='7' x:Name="txtBestScore" Text="Best: 0" FontSize="30" Foreground="White" FontWeight="ExtraBold" HorizontalAlignment="Right"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock x:ConnectionId='4' x:Name="txtState" Text="1" FontSize="40" Foreground="White" FontWeight="ExtraBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ProgressBar x:ConnectionId='5' Grid.Row="1" x:Name="progressBar" IsIndeterminate="False" Maximum="9999" Minimum="0" Height="10" Margin="8 0 8 0" Value="9999" SmallChange="1"/>
            </Grid>
            <Grid Grid.Row="2">
                <TextBlock x:ConnectionId='3' x:Name="txtMath" Text="3 + 5 = 8" FontSize="40" Foreground="White" FontWeight="ExtraBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="3" VerticalAlignment="Top">
                <Button x:ConnectionId='1' x:Name="btnTrue" BorderBrush="#a4404e" BorderThickness="4" Margin="25 5 25 5" Background="#ee474f" Content="True" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20 5 20 5"
                        Foreground="White" FontWeight="ExtraBold" FontSize="30"                      />
                <Button x:ConnectionId='2' x:Name="btnFalse" BorderBrush="#a4404e" BorderThickness="4" Margin="25 5 25 5" Background="#9fc33e" Content="False" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="20 5 20 5"
                        Foreground="White" FontWeight="ExtraBold" FontSize="30"                       />
            </Grid>
        </Grid>
    </Grid>
</Page>

