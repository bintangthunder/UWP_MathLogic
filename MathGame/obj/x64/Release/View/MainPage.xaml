<Page
    x:Class="MathGame.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MathGame"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="#37384d">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0 20 0 0">
                <TextBlock x:ConnectionId='5' x:Name="Title" Text="Speed Math" Foreground="Cyan" FontWeight="ExtraBold" TextWrapping="Wrap" FontSize="50" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock x:ConnectionId='4' x:Name="txtBestScore" Text="BEST SCORE: 0" Foreground="Bisque" FontWeight="ExtraBold" TextWrapping="Wrap"
                           FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel Orientation="Vertical">
                    <Button x:ConnectionId='1' x:Name="btnStart" BorderBrush="#a4404e" BorderThickness="4" Background="#ee474f" Content="PLAY" HorizontalAlignment="Center"
                            VerticalAlignment="Center" Padding="40 10 40 10" Foreground="Bisque" FontWeight="ExtraBold" FontSize="30"                        />
                    <Button x:ConnectionId='2' x:Name="btnOption" BorderBrush="#a4404e" BorderThickness="4" Margin="0 20 0 0" Background="#9fcc3e" Content="OPTION" HorizontalAlignment="Center"
                            VerticalAlignment="Center" Padding="20 10 20 10" Foreground="Bisque" FontWeight="ExtraBold" FontSize="30"                         />
                    <Button x:ConnectionId='3' x:Name="btnPlayBack" Margin="0 20 0 0" BorderBrush="#a4404e" BorderThickness="4" Background="Khaki" Content="BACK" HorizontalAlignment="Center"
                            VerticalAlignment="Center" Padding="40 10 40 10" Foreground="BlueViolet" FontWeight="ExtraBold" FontSize="30"                           />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>

